#:kivy 1.10.1

<SlideLayout>:
    Widget:
        id: main_Canvas
        SlideTextBox:
            id: slidetext
            background_color: (0, 0, 0, 0)
            foreground_color: (0, 0, 0, 0)
            multiline: False
            text:"Test Text"
            font_size: 60
            readonly: True 
            halign: 'center'
            valign: 'middle'

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)